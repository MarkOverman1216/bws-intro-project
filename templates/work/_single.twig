{# @var craft \craft\web\twig\variables\CraftVariable #}
{% extends "_layouts/_layout.twig" %}

{% block _inline_css %}
    <style>
        {{source ("index_critical.min.css", ignore_missing = true)}}
    </style>
{% endblock %}

{% set title = entry.title %}

{% block content %}

<!-- Case Study Hero -->
<section class="section is-large is-dark is-background-container has-background header-background animatable">
    <div class="background-image-container">
        <img src="{{ entry.heroBackgroundImage.one().getUrl('widescreenHuge') }}" data-object-fit>
    </div>
</section>
<section class="section is-dark is-vertical-center is-background-container hero case-study animatable">
    <div class="container">
        <div class="hero-container is-background-container">
            <div class="background-image-container secondary-image">
                <div class="transition-helper">
                    <img src="{{ entry.heroFeaturedImage.one().getUrl('fullHeightHuge') }}" data-object-fit>
                </div>
            </div>
            <div class="heading-container">
                <p class="is-subheading has-dash">{{ entry.heroSubheading }}</p>
                <h1 class="is-large">{{ entry.heroHeading }}</h1>
            </div>
            <div class="content-container">
                <div class="columns is-gapless info-container">
                    <div class="column is-narrow">
                    {% set serviceTags = entry.serviceTags.all %}
                        {% if serviceTags|length %}
                        <div class="services">
                            <ul>
                                {% for tag in serviceTags %}
                                    <li>{{ tag }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>
                    <div class="column is-narrow">
                        <div class="date">
                            {{ entry.completionDate|date('F') }}<br/>
                            {{ entry.completionDate|date('Y') }}
                        </div>
                    </div>
                </div>
                <a href="{{ entry.projectUrl }}" class="button text-button" target="_blank">View Project</a>        
            </div>
        </div>
    </div>
</section>

{% for block in entry.contentBuilder.all() %}
    {% include('_blocks/_' ~ blockPrefix ~ 'block_' ~ block.type.handle) %}
{% endfor %}

{% endblock %}

{% block _inline_js %}{% endblock %}