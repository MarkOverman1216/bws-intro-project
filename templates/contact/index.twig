{# @var craft \craft\web\twig\variables\CraftVariable #}
{% extends "_layouts/_layout.twig" %}

{% block _inline_css %}
    <style>
        {{ source ("index_critical.min.css", ignore_missing = true) }}
    </style>
{% endblock %}

{% block content %}
<div class="section is-medium is-background-container contact-section">
    <div class="background-image-container">
        <img src="{{ baseUrl }}img/temp/contact-phone.jpg">
    </div>
    <div class="container is-small has-text-centered">
        <div class="columns has-text-left">
            <div class="column is-half is-offset-half">
                <h1 class="is-large">Let's work together.</h1>

                <form class="contact-form" method="post" action="/" v-on:submit.prevent="onSubmit">
                    {{ csrfInput() }}
                    <input type="hidden" name="action" value="contact-form/send">
                    <div class="field">
                        <div class="control">
                            <input type="text" name="fromName" class="input" placeholder="Name*" v-model="name" v-validate="'required'">
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <input type="email" name="fromEmail" class="input" placeholder="Email*" v-model="email" v-validate="'email|required'">
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <input class="input" type="phone" name="message[Phone]" placeholder="Phone number" v-model="phone" v-validate="'numeric'">
                        </div>
                    </div>
                    <div class="field">
                        <label for="budget" class="label">What is your budget?</label>
                        <div class="control">
                            <div class="select">
                                <select name="message[Budget]" v-model="budget">
                                    <option value="none">None</option>
                                    <option value="<5k">&lt;$5k</option>
                                    <option value="5k-8k">$5k-8k</option>
                                    <option value="8k-15k">$9k-15k</option>
                                    <option value="15k+">$15k+</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label for="message" class="label">Describe your needs - the more we know, the better.</label>
                        <div class="control">
                            <textarea class="textarea" name="message[Body]" placeholder="I'm looking for ...*" v-model="message" v-validate="'required'"></textarea>
                        </div>
                    </div>
                    <p class="help is-danger" v-if="ajaxError" v-cloak>
                        Sorry, something went wrong, and we couldn't send your message. Please email <a href="mailto:hello@boyerwebstudios.com">hello@boyerwebstudios.com</a> directly.
                    </p>
                    <p class="help" v-if="submitted">
                        Thanks for getting in touch! We'll get back to you shortly. 
                    </p>
                    <div class="field">
                        <div class="buttons is-right">
                            <input class="button" type="submit" value="Get in touch" :disabled="submitting">
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<div class="section is-large is-dark has-background about-contact-section">
    <div class="container is-medium">
        <div class="columns">
            <div class="column is-half">
                <h1>We're just a click away.</h1>
                <div class="address">
                    <p>9933 N Cherry Drive</p>
                    <p>Kansas City, MO 64155</p>
                    <p>United States</p>
                </div>
                <div class="contact">
                    <p>
                        <a href="#">+1 (816) 746-4003</a>
                    </p>
                    <p>
                        <a href="#">hello@boyerwebstudios.com</a>
                    </p>
                </div>
            </div>
            <div class="column is-half is-paddingless is-hidden-mobile">
                <iframe width="100%" height="100%" src="https://maps.google.com/maps?width=100%&amp;height=100%&amp;hl=en&amp;q=9933%20N%20Cherry%20Drive%2C%20KC%20MO%2064155+(Boyer%20Web%20Studios)&amp;ie=UTF8&amp;t=&amp;z=14&amp;iwloc=B&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block _inline_js %}
{% endblock %}