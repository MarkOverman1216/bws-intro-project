<!-- Offset Image Hero -->
<section class="section is-large is-dark is-background-container has-background header-background">
    <div class="background-image-container">
        <img src="{{ entry.heroBackgroundImage.one().getUrl() }}">
    </div>
</section>
<section class="section is-dark is-vertical-center is-background-container hero offset-image">
    <div class="container">
        <div class="hero-container is-background-container">
            <div class="background-image-container featured-image">
                <img src="{{ entry.heroFeaturedImage.one().getUrl() }}">
            </div>
            <div class="heading-container">
                <p class="is-subheading has-dash">{{ entry.heroSubheading }}</p>
                <h1 class="is-large">{{ entry.heroHeading }}</h1>
            </div>
        </div>
    </div>
</section>

{% for block in entry.contentBuilder %}
    {% include('_blocks/_' ~ blockPrefix ~ 'block_' ~ block.type.handle) %}
{% endfor %}

<!-- Team Slider -->
<section class="section is-medium is-dark has-background">
    <div class="container">
        <h1>Meet the team</h1>
    </div>
    <div class="container is-full">
        <div class="team-slider slider">
            <div class="track clearfix">
                <article class="slide">
                    <img src="{{ baseUrl }}img/temp/about-james.jpg">
                    <div class="description">
                        <h2>James Boyer</h2>
                        <p class="is-subheading">COFOUNDER / MARKETING DIRECTOR</p>
                    </div>
                </article>
                <article class="slide">
                    <img src="{{ baseUrl }}img/temp/about-jr.jpg">
                    <div class="description">
                        <h2>John Boyer</h2>
                        <p class="is-subheading">COFOUNDER / DESIGN &amp; DEVELOPMENT DIRECTOR</p>
                    </div>
                </article>
                <article class="slide">
                    <img src="{{ baseUrl }}img/temp/about-joanna.jpg">
                    <div class="description">
                        <h2>Joanna Boyer</h2>
                        <p class="is-subheading">MANAGEMENT DIRECTOR</p>
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>

{% endblock %}

