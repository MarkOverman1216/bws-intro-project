<!-- Offset Image Hero -->
<section class="section is-large is-dark is-background-container has-background hero animatable">
    <div class="background-image-container">
        <div class="transition-helper">
            {% set image = entry.heroFeaturedImage.one() %}
            <img src="{{ image.getUrl('widescreenHuge') }}" title="{{ image.title }}" alt="{{ image.title }}" data-object-fit>
        </div>
    </div>
    <div class="container is-small content-container">
        <p class="is-subheading has-dash heading-title-wrap"><span class="heading-title">{{ entry.heroSubheading }}</span></p>
        <h1 class="is-large heading-title-wrap"><span class="heading-title">{{ entry.heroHeading }}</span></h1>
    </div>
</section>