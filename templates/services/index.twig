{# @var craft \craft\web\twig\variables\CraftVariable #}
{% extends "_layouts/_layout.twig" %}

{% block _inline_css %}
    <style>
        {{ source ("index_critical.min.css", ignore_missing = true) }}
    </style>
{% endblock %}

{% block content %}

<!-- Offset Image Hero -->
<section class="section is-large is-dark is-background-container has-background header-background">
    <div class="background-image-container">
        <img src="{{ baseUrl }}img/temp/cases-antioch_insurance_agency_background.jpg">
    </div>
</section>
<section class="section is-dark is-vertical-center is-background-container hero offset-image">
    <div class="container">
        <div class="hero-container is-background-container">
            <div class="background-image-container featured-image">
                <img src="{{ baseUrl }}img/temp/services-header.jpg">
            </div>
            <div class="heading-container">
                <p class="is-subheading has-dash">OUR SERVICES</p>
                <h1 class="is-large">What we are passionate about.</h1>
            </div>
        </div>
    </div>
</section>

{% for block in entry.contentBuilder %}
    {% include('_blocks/_' ~ blockPrefix ~ 'block_' ~ block.type.handle) %}
{% endfor %}

<section class="section is-medium is-dark has-background has-text-centered">
    <div class="container is-medium">
        <a href="#">
            <p class="is-subheading">NEXT</p>
            <h1>Case Studies</h1>
        </a>
    </div>
</section>

{% endblock %}

{% block _inline_js %}
{% endblock %}